<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/few_green"
    tools:context=".UpdateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/u_uinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/user" />

        <TextView
            android:id="@+id/u_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="5dp"
            android:text="Phone: " />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

        <EditText
            android:id="@+id/u_uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="User Name"
            android:padding="5dp"
            android:background="@color/transparent"
            android:inputType="textPersonName"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

        <EditText
            android:id="@+id/u_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="E-Mail"
            android:padding="5dp"
            android:background="@color/transparent"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Date Of Birth"
            android:inputType="date"
            android:minHeight="48dp"
            android:padding="5dp"
            android:background="@color/transparent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/u_rinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:text="@string/rest" />

        <ImageView
            android:id="@+id/u_rphoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:onClick="uploadRestaurantPhoto"
            tools:srcCompat="@drawable/ic_baseline_add_a_photo_24" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_oname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Owner Name"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_rname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_restaurant_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Name Of Restaurant"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_add_location_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Address Of Restaurant"
            android:inputType="textPostalAddress"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_rphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:background="@color/transparent"
            android:ems="10"
            android:hint="Restaurant Contact Number"
            android:inputType="phone"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_rmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Restaurant E-Mail"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_web_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Restaurant Website"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_opening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Date Of Opening"
            android:inputType="date"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_restaurant_menu_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Restaurant Type"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Opening Time"
            android:inputType="time"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Closing Time"
            android:inputType="time"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
        <EditText
            android:id="@+id/u_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_description_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:background="@color/transparent"
            android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">
        <Button
            android:id="@+id/u_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="samePage"
            android:background="@color/dark_green"
            android:textColor="@color/white"
            android:text="Submit" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>