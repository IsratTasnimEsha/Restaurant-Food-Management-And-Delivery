<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <soup.neumorphism.NeumorphFloatingActionButton
            style="@style/ShapeAppearance.Neumorph.FloatingActionButton"
            android:id="@+id/bcdd_dismiss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            app:neumorph_shadowColorLight="@color/white"
            app:neumorph_shadowColorDark="@color/ash"
            app:neumorph_shapeType="flat"
            android:scaleType="center"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:src="@drawable/ic_baseline_cancel_presentation_24">
        </soup.neumorphism.NeumorphFloatingActionButton>

        <androidx.cardview.widget.CardView
            android:id="@+id/bcdd_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/few_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Delete From Cart" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>