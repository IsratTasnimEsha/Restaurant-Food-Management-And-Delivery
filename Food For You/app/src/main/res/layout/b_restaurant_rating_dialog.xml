<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

    <soup.neumorphism.NeumorphFloatingActionButton
        style="@style/ShapeAppearance.Neumorph.FloatingActionButton"
        android:id="@+id/brrd_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        app:neumorph_shadowColorLight="@color/white"
        app:neumorph_shadowColorDark="@color/ash"
        app:neumorph_shapeType="flat"
        android:scaleType="center"
        android:layout_gravity="right"
        android:foregroundGravity="right"
        android:src="@drawable/ic_baseline_cancel_presentation_24">
    </soup.neumorphism.NeumorphFloatingActionButton>

    <RatingBar
        android:id="@+id/brrd_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:layout_gravity="center"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/brrd_rating_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/brrd_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/few_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Submit" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>